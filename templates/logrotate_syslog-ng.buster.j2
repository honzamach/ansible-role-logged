/var/log/auth.log
{
    rotate 12
    monthly
    missingok
    notifempty
    delaycompress
    compress
    dateext
    postrotate
        invoke-rc.d syslog-ng reload > /dev/null
    endscript
}

/var/log/syslog
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/uucp.log
/var/log/debug
/var/log/messages
/var/log/error
{
    rotate 12
    weekly
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    dateext
    postrotate
        invoke-rc.d syslog-ng reload > /dev/null
    endscript
}
